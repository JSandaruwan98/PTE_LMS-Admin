SELECT 
    dates.date AS attendance_date, 
    s.*,
    IFNULL(att.isIn, 0) AS isIn
FROM (
    SELECT CURDATE() AS date
    UNION ALL SELECT DATE_SUB(CURDATE(), INTERVAL 1 DAY)
    UNION ALL SELECT DATE_SUB(CURDATE(), INTERVAL 2 DAY)
    UNION ALL SELECT DATE_SUB(CURDATE(), INTERVAL 3 DAY)
    UNION ALL SELECT DATE_SUB(CURDATE(), INTERVAL 4 DAY)
) AS dates
LEFT JOIN (
    SELECT student_id, attendance_date, 1 AS isIn
    FROM attendance
    WHERE student_id = 2
      AND attendance_date BETWEEN DATE_SUB(CURDATE(), INTERVAL 5 DAY) AND CURDATE()
) AS att
ON dates.date = att.attendance_date
LEFT JOIN student s
ON s.student_id = 2
ORDER BY attendance_date;
